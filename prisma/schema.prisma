generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Singer {
  id          Int     @id @default(autoincrement())
  name        String
  genre       String
  biography   String
  photoUrl    String?

  musics      Music[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("singers")
}

model Music {
  id          Int     @id @default(autoincrement())
  title       String
  description String
  url         String
  rating      Float

  singerId    Int
  singer      Singer   @relation(fields: [singerId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("musics")
}

